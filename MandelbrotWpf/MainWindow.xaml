<Window x:Class="MandelbrotWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MandelbrotWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="bRefresh" Content="Refresh" Margin="90,0,0,9.8" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" Click="bRefresh_Click"/>
        <Image x:Name="image" Margin="10,10,10,34.8" MouseLeftButtonDown="image_MouseLeftButtonDown" MouseLeftButtonUp="image_MouseLeftButtonUp"/>
        <Button x:Name="bBack" Content="Back" HorizontalAlignment="Left" Margin="10,0,0,9.8" Width="75" Height="20" VerticalAlignment="Bottom" Click="bBack_Click"/>
        <Button x:Name="bCopyTransformations" Content="Copy Transformations" HorizontalAlignment="Left" Margin="170,0,0,9.8" Width="145" Height="20" VerticalAlignment="Bottom" Click="bCopyTransformations_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="330,0,0,9.8" Width="122" Height="22" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
